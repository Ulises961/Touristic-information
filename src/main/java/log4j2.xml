<?xml version ="1.0" encoding="UTF-8"?>

<Configuration xmlns= "http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name= "basePath">./Logs</Property>
         
    </Properties>

    <Appenders> 
        <!-- File Appender -->
       
        <File name= "Request_Error" fileName="${basePath}/Requests_Exceptions.log" append="true">
            <ThresholdFilter level ="info" onMatch ="accept" onMismatch="deny"/>
            <PatternLayout pattern ="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </File>

        <File name= "RequestSetter_Debug" fileName="${basePath}/Request.log" append="true">
          
            <PatternLayout pattern ="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        
        </File>
        
         <File name= "Saving_Responses" fileName="${basePath}/Saving_Responses.log" append="true">
            <ThresholdFilter level ="info" onMatch ="accept" onMismatch="deny"/>
            <PatternLayout pattern ="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </File>

        <File name= "Computing_Analysis" fileName="${basePath}/Computing_Analysis.log" append="false">
            <ThresholdFilter level ="info" onMatch ="accept" onMismatch="deny"/>
            <PatternLayout pattern ="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </File>

         <File name= "Parser" fileName="${basePath}/Parser.log" append="false">
            <ThresholdFilter level ="info" onMatch ="accept" onMismatch="deny"/>
            <PatternLayout pattern ="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </File>
         <!-- Console Appender -->
        
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern ="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </Console> -->
    
    </Appenders>
    
    <Loggers>
        <Logger name="com.OpenDataHub.requests.Retriever" level = "info" additivity= "true" >
            <AppenderRef ref= "RequestSetter_Debug" />
            <AppenderRef ref= "Request_Error" />
        </Logger>
     
        <Logger name="com.OpenDataHub.requests.RequestSetter" level = "info" additivity= "true" >
            <AppenderRef ref= "RequestSetter_Debug" />
        </Logger>

        <Logger name="com.OpenDataHub.requests.SharedList" level = "info" additivity= "false" >
            <AppenderRef ref= "STDOUT" />
        </Logger>

        <Logger name="com.OpenDataHub.runnable.SaveActivityJson" level = "info" additivity= "false" >
            <AppenderRef ref= "Saving_Responses" />
            <AppenderRef ref= "STDOUT" />
        </Logger>

        <Logger name="com.OpenDataHub.analysis.AnalysisDataStorage" level = "info" additivity= "false" >
            <AppenderRef ref= "Computing_Analysis" />
        </Logger>

         <Logger name="com.OpenDataHub.parser.Parser" level = "info" additivity= "false" >
            <AppenderRef ref= "Parser" />
        </Logger>

        <Root level= "info">
            <AppenderRef ref= "STDOUT"/>
        </Root> 
    </Loggers>
    </Configuration>